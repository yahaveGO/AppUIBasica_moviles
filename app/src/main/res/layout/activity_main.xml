<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMain"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTituloApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_size"
        android:gravity="center"
        android:text="@string/titulo_app"
        android:textColor="@color/white"
        android:background="@color/colorMain"
        android:textSize="@dimen/titulo_size" />

    <Button
        android:id="@+id/btnActividad"
        android:background="@color/white"
        android:color="@color/black"
        android:textSize="@dimen/titulo_size"
        android:layout_marginLeft="@dimen/top_size"
        android:layout_marginRight="@dimen/top_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_size"
        android:text="@string/boton_gravity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnPasoParametro"
        android:background="@color/white"
        android:color="@color/black"
        android:textSize="@dimen/titulo_size"
        android:layout_marginLeft="@dimen/top_size"
        android:layout_marginRight="@dimen/top_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_size"
        android:text="@string/paso_parametros"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/btnCasillaVerificacion"
        android:background="@color/white"
        android:color="@color/black"
        android:textSize="@dimen/titulo_size"
        android:layout_marginLeft="@dimen/top_size"
        android:layout_marginRight="@dimen/top_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_size"
        android:text="@string/boton_check"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnSelector"
        android:background="@color/white"
        android:color="@color/black"
        android:textSize="@dimen/titulo_size"
        android:layout_marginLeft="@dimen/top_size"
        android:layout_marginRight="@dimen/top_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_size"
        android:text="@string/selector_spinner"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnEtiqueta"
        android:background="@color/white"
        android:color="@color/black"
        android:textSize="@dimen/titulo_size"
        android:layout_marginLeft="@dimen/top_size"
        android:layout_marginRight="@dimen/top_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_size"
        android:text="@string/etiquetas"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnRadio"
        android:background="@color/white"
        android:color="@color/black"
        android:textSize="@dimen/titulo_size"
        android:layout_marginLeft="@dimen/top_size"
        android:layout_marginRight="@dimen/top_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_size"
        android:text="@string/botones_radio"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnCajaTexto"
        android:background="@color/white"
        android:color="@color/black"
        android:textSize="@dimen/titulo_size"
        android:layout_marginLeft="@dimen/top_size"
        android:layout_marginRight="@dimen/top_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_size"
        android:text="@string/cajas_de_texto"
        android:textAllCaps="false" />


</LinearLayout>